<p id="notice"><%= notice %></p>

<h1>All blogs</h1>

<div id="all_articles__div">
  <% @articles.each do |article| %>
    <div class="article__div">
      <p><b>Title: </b><%= article.title %></p>
      <p><b>Post: </b><%= article.post[0, 200] %>...<%= link_to 'read more', article %></p>
      <p><b>Author: </b><%= User.find(article.user_id).username %></p>
      <p>
        <div type="button" class="btn btn-info"><%= link_to 'Show', article %></div>
        <div type="button" class="btn btn-warning"><%= link_to 'Edit', edit_article_path(article) %></div>
        <div type="button" class="btn btn-danger"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </p>
    </div>
  <% end %>
</div>

<br>
