    </div>
  <% end %>

<div class="form-horizontal col-md-8">
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :article_title %>
  </div>

  <div class="form-group">
    <%= form.label :post %>
    <%= form.text_area :post, id: :article_post %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :username %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>
