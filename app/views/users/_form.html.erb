<%= form_with(model: user, local: true, html: {class: 'form-horizontal'}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :username, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :username, id: :user_username, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :email, id: :user_email, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :password, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :password, id: :user_password, class: 'form-control' %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit %>
    </div>
  </div>

<% end %>
