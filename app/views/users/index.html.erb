<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Username</th>
      <th>Password</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td>
            <%= link_to 'Show', user, class: "btn btn-info" %>
        </td>
        <td>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" %>
          </td>
        <td>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-success" %>
