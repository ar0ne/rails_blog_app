<p id="notice"><%= notice %></p>

<div class="row">
  <p>
    <strong>Username:</strong>
    <%= @user.username %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Password:</strong>
    <%= @user.password %>
  </p>
</div>

<table class="table">
  <thead>
    <tr>
      <td><b>Articles</b></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @user.articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td>
              <%= link_to 'Show', article, class: "btn btn-info" %>
          </td>
        </tr>
      <% end %>
    </tr>
  </tbody>
</table>

<div class="col-md-12">
    <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-warning" %>
    <%= link_to 'Back', users_path, class: "btn btn-info" %>
</div>
