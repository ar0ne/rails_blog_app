<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlogApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav id="navbar">

      <p>
        <%= link_to 'Home', { :controller => 'articles', :action => 'index' } %>
        <%= link_to 'Users', { :controller => 'users', :action => 'index' } %>
        <%= link_to 'Add new blog', { :controller => 'articles', :action => 'new' } %>
      </p>

    </nav>

    <%= yield %>
  </body>
</html>
